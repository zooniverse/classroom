.map-explorer
  overflow: hidden
  position: relative
  width: auto
  height: 90vh
  margin: 0.5em 1em
  
  //Don't use <Box full={true} />, since 1. we want some padding around the map
  //to allow mouse scroll-ability, and 2. at 100vh, we can't see the bottom of
  //the map when we account for the Zooniverse header.
  
  .map-visuals
    width: 100%
    height: 90vh  //Same comments as .map-explorer.
  
  .map-controls
    //Layout
    position: absolute
    top: 0.5em
    right: 0.5em
    z-index: 1000  //Required to place controls above .map-visuals's Leaflet map
    
    width: 80%
    max-width: 24em
    
    //Visual styles
    background: white
    padding: 1em
    border: 1px solid GREY_3
    
    > .grommetux-accordion > div > .grommetux-collapsible__wrapper > .grommetux-collapsible
      max-height: 60vh
      overflow: auto
    
    .map-controls-status
    .map-controls-filters
      background: GREY_5
      padding: 0 0.5em
      
      &.selected
        background: TEAL_LIGHT
    
    .zooniversal-translator
      .selected
        background: TEAL_LIGHT
    
    .grommetux-control-icon
      width: 1em
      
    .grommetux-header
      min-height: 1em
    
    .selected .grommetux-header
      background: TEAL_LIGHT
    
    .grommetux-button
    .grommetux-label
      font-size: inherit
      
      &--small
        font-size: 0.8em
    
    .grommetux-button__icon
      padding: 0.1em 0.5em
    
    .grommetux-accordion .grommetux-accordion
      padding-left: 1em
  
  .map-legend
    background: #fff
    font-size: 0.8em
    max-height: 16em
    max-width: 16em
    overflow: auto
    
    .map-legend-item
      padding: 0.2em
      
      svg
        flex: 0 0 auto
        margin: 0.2em
  
.camera-viewer
  z-index: 2000  //Required to place controls above .map-visuals's Leaflet map
  padding: 1em
    
  .content
    margin: 1em auto
  
  .camera-metadata
  .camera-data
    overflow: auto
    margin-bottom: 0.5em
    
  .camera-metadata
    border: 1px solid GREY_1
    max-height: 12em
    
    li
      padding: 0
      
      span:first-child
        color: GREY_3
        margin-right: 1em
        max-width: 16em

  .camera-data
    border: 1px solid GREY_1
    
    .camera-data-item
      max-width: 30%
      margin-bottom: 1%
      margin-top: 1%
      
      img
        width: 100%
    
    .camera-data-paging
      label
        line-height: 3em
        flex: 1 1 auto
      
      .grommetux-button__icon
        padding-top: 0
