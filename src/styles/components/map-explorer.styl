.map-explorer
  width: 100%
  height: 90vh  //This height is arbitrary, but gives the best "almost-fullscreen" size.
  overflow: hidden
  display: flex
  position: relative
  
  .map-visuals
    flex: 0 0 auto
    width: 100%
    height: 100%
    
    #mapVisuals
      width: 100%
      height: 100%
    
    .legend
      padding: 0.2em 0.5em
      background: rgba(255, 255, 255, 0.8)
      border-radius: 0.2em

  .map-controls
    background: white
    position: absolute
    top: 1em
    right: 1em
    z-index: 1000
