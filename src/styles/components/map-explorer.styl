.map-explorer
  overflow: hidden
  position: relative
  width: auto
  height: 90vh
  margin: 0.5em 1em
  
  //Don't use <Box full={true} />, since 1. we want some padding around the map
  //to allow mouse scroll-ability, and 2. at 100vh, we can't see the bottom of
  //the map when we account for the Zooniverse header.
  
  .map-visuals
    width: 100%
    height: 90vh  //Same comments as .map-explorer.
  
  .map-controls
    //Layout
    position: absolute
    top: 0.5em
    right: 0.5em
    z-index: 500  //Required to place controls above .map-visuals's Leaflet map
    
    width: 80%
    max-width: 24em
    
    //Visual styles
    background: white
    padding: 1em
    border: 1px solid black
    
    > .grommetux-accordion > div > .grommetux-collapsible__wrapper > .grommetux-collapsible
      max-height: 60vh
      overflow: auto
    
    .map-controls-status
    .map-controls-filters
      background: #eee
      padding: 0 0.5em
      
      &.selected
        background: #fc3
    
    .grommetux-control-icon
      width: 1em
      
    .grommetux-header
      min-height: 1em
    
    .selected .grommetux-header
      background: #fc3
    
    .grommetux-button
    .grommetux-label
      font-size: inherit
      
      &--small
        font-size: 0.8em
    
    .grommetux-button__icon
      padding: 0.1em 0.5em
    
    .grommetux-accordion .grommetux-accordion
      padding-left: 1em
